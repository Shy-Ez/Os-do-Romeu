    <script>
        function mostrarFormulario() {
            var formulario = document.getElementById("formulario");
            formulario.style.display = "block"; // Exibe o formulário ao clicar no botão
        }
    </script>
<p>Bem vindo ao boni</p>
<button onclick="mostrarFormulario()">Criar</button>

<div id="formulario">
    <h2>Formulário</h2>
